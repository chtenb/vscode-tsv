{
    "name": "vscode-tsv",
    "displayName": "VSCode TSV",
    "description": "Automatically set the tabsize to align column cells without modifying the file.",
    "publisher": "ctenbrinke",
    "repository": "https://github.com/Chiel92/vscode-tsv",
    "version": "0.2.0",
    "engines": {
        "vscode": "^1.52.0"
    },
    "license": "MIT",
    "keywords": [
        "tsv",
        "align",
        "column"
    ],
    "categories": [
        "Data Science",
        "Other",
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:tsv"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "extension.toggleEnabled",
                "title": "Toggle VSCode-TSV On/Off For Current File"
            }
        ],
        "configurationDefaults": {
            "[tsv]": {
                "editor.wordWrap": "off",
                "editor.detectIndentation": false,
                "editor.insertSpaces": false
            }
        },
        "languages": [
            {
                "id": "tsv",
                "aliases": [
                    "TSV",
                    "tsv"
                ],
                "extensions": [
                    ".tsv",
                    ".tab"
                ]
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack --config ./build/node-extension.webpack.config.js",
        "watch": "webpack --watch --config ./build/node-extension.webpack.config.js",
        "package": "webpack --mode production --devtool hidden-source-map --config ./build/node-extension.webpack.config.js",
        "test-compile": "tsc -p ./",
        "test-watch": "tsc -watch -p ./",
        "pretest": "npm run test-compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.52.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.0.4",
        "@types/node": "^12.11.7",
        "eslint": "^7.15.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "glob": "^7.1.6",
        "mocha": "^8.1.3",
        "typescript": "^4.1.2",
        "vscode-test": "^1.4.1",
        "ts-loader": "^8.0.11",
        "webpack": "^5.10.0",
        "webpack-cli": "^4.2.0"
    }
}
